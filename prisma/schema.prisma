generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") 
}

model jeux {
  id Int @id @default(autoincrement())
  titre        String
  description  String
  date         DateTime
  genre        String
  editeur      String
  misenavant   Boolean
  image        String
}

model genres {
  id           Int @id @default(autoincrement())
  nom          String
}

model editeurs {
  id           Int @id @default(autoincrement())
  nom          String
}

